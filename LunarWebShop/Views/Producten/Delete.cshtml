@using LunarWebShop.Models
@model LunarWebShop.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Administrator"] == null)
{
    Response.Redirect("../Home/Index");
}
else
{
    var Admin = Session["Administrator"] as Administrator;

    if (Admin != null)
    {
        <center style="padding: 4rem 2rem;">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Product</h4>
                <hr/>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Naam)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Naam)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Uitgever)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Uitgever)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Prijs)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Prijs)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Foto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Foto)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default"/> |
                        @Html.ActionLink("Back to List", "Index")
