@model Models.ViewModelProductKeycode

<div>
    <h4>@Model.Product.Naam</h4>
    <hr />
    <center style="padding: 4rem 2rem;">
        <div style="max-width: 30%; display: inline-block;">
            <img style="width: 100%;" src="@Url.Content(@Model.Product.Foto)" alt="@Model.Product.Naam" />
        </div>
        <div style="display: inline-block; max-width: 60%;">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Product.Uitgever)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Uitgever)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Product.Genre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Genre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Product.Prijs)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Prijs)
                </dd>
                <dt>
                    Voorraad
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Hoeveelheid)
                </dd>

            </dl>
        </div>
    </center>
</div>

