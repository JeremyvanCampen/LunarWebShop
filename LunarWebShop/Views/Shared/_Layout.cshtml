@using System.Web.UI.WebControls
@using LunarWebShop.Models
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;text-align: left">
    @using LunarWebShop.Models
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="~/Home/Index">Lunar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>
            @{
                var klant = Session["Klant"] as Klant;
                var admin = Session["Administrator"] as Administrator;
            }

            <div class="collapse navbar-collapse" id="navbarColor03">
                @if (klant != null || admin != null)
                    {
                        if (klant != null)
                        {
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    @Html.ActionLink("Home", "Index", "Home", null, new { @style="color:White;" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("About", "About", "Home", null, new { @style = "color:White;" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:White;" })
                                </li>
                            </ul>
                            <form class="navbar-nav">
                                <li class="nav-item">
                                    <a>Welkom, @klant.Voornaam @klant.Achternaam</a>
                                </li>
                                <li class="nav-item">
                                    <a>Saldo : €@klant.Saldo</a>
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Mijn Account", "MijnAccount", "Klant", null, new { @style = "color:White;" })
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Home")">
                                        <img style="margin-top: -20%" src="/Images/shopping-cart-32.png"/>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("uitloggen", "Uitloggen", "Klant", null, new { @style = "color:White;" })
                                </li>
                            </form>
                        }
                        if (admin != null)
                        {
                                    <ul class="navbar-nav mr-auto">
                                        <li class="nav-item active">
                                            @Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:White;" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("About", "About", "Home", null, new { @style = "color:White;" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:White;" })
                                        </li>
                                    </ul>
                                    <form class="navbar-nav">
                                        <li class="nav-item">
                                            <a>Welkom Admin, @admin.Voornaam @admin.Achternaam</a>
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("uitloggen", "Uitloggen", "Klant", null, new { @style = "color:White;" })
                                        </li>
                                    </form>
                        }
                     }
                        else
                        {
                                    <ul class="navbar-nav mr-auto">
                                        <li class="nav-item active">
                                            @Html.ActionLink("Home", "Index", "Home", null, new { @style = "color:White;" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("About", "About", "Home", null, new { @style = "color:White;" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "color:White;" })
                                        </li>
                                    </ul>
                                    <form class="navbar-nav">
                                        <li class="nav-item">
                                            @Html.ActionLink("Login", "Login", "Klant", null, new { @style = "color:White;" })
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Registreren", "RegistratieKlant", "Klant", null, new { @style="color:White;" })
                                        </li>
                                    </form>
                        }
            </div>
            </nav>
@RenderBody()

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
